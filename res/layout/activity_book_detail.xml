<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#60A1D3"
            android:textColor="#ffffff"
            android:textSize="20sp" >

            <ImageView
                android:id="@+id/iv_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="书本详情"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/share_icon" />
        </RelativeLayout>
    
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >

         <LinearLayout
             android:id="@+id/ll_content"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:visibility="gone" >

             <TextView
                 android:id="@+id/tv_book_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:padding="10dp"
                 android:text="易查询易查询易查询易查询易查询易查询易查询"
                 android:textSize="15sp" />

             <TextView
                 android:id="@+id/tv_book_author"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:paddingLeft="10dp"
                 android:text="作者:张三"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/tv_book_publisher"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:paddingLeft="10dp"
                 android:paddingTop="5dp"
                 android:text="出版社:华中科技大学出版社"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/tv_book_publidate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:paddingBottom="5dp"
                 android:paddingLeft="10dp"
                 android:paddingTop="5dp"
                 android:text="出版日期:2012"
                 android:textSize="13sp" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="15dp"
                 android:background="#eeeeee" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:padding="5dp" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:drawableLeft="@drawable/search_book052x"
                     android:drawablePadding="8dp"
                     android:gravity="center_vertical"
                     android:text="在借的人" />

                 <TextView
                     android:id="@+id/tv_currentlendnum"
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:layout_alignParentRight="true"
                     android:drawablePadding="10dp"
                     android:drawableRight="@drawable/arrow_right"
                     android:gravity="center_vertical"
                     android:text="0" />
             </RelativeLayout>

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#eeeeee" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:padding="5dp" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:drawableLeft="@drawable/search_book072x"
                     android:drawablePadding="8dp"
                     android:gravity="center_vertical"
                     android:text="借过的人" />

                 <TextView
                     android:id="@+id/tv_hadlendednum"
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:layout_alignParentRight="true"
                     android:drawablePadding="10dp"
                     android:drawableRight="@drawable/arrow_right"
                     android:gravity="center_vertical"
                     android:text="0" />
             </RelativeLayout>

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#eeeeee" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:padding="5dp" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:drawableLeft="@drawable/search_book062x"
                     android:drawablePadding="8dp"
                     android:gravity="center_vertical"
                     android:text="可借图书" />

                 <TextView
                     android:id="@+id/tv_canlendnum"
                     android:layout_width="wrap_content"
                     android:layout_height="44dp"
                     android:layout_alignParentRight="true"
                     android:drawablePadding="10dp"
                     android:drawableRight="@drawable/arrow_right"
                     android:gravity="center_vertical"
                     android:text="0" />
             </RelativeLayout>
         </LinearLayout>

         <ImageView
             android:id="@+id/iv_no_data"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerInParent="true"
             android:visibility="gone" 
             android:src="@drawable/no_data_and"
             />

         <ProgressBar
             android:id="@+id/pb_loading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true" />
     </RelativeLayout>

</LinearLayout>